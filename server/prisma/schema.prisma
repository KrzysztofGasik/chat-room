generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  password     String
  username     String       @unique
  avatar       String?
  createdAt    DateTime     @default(now())
  createdRooms Room[]       @relation("CreatedRooms")
  message      Message[]
  roomMember   RoomMember[]
}

model Room {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  createdBy   User         @relation("CreatedRooms", fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime
  roomMember  RoomMember[]
  message     Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  roomId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model RoomMember {
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId     String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  role       String
  joinedAt   DateTime
  lastReadAt DateTime

  @@id([roomId, userId])
}
