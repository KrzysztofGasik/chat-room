{
  "name": "chat-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"npm run start:dev -w server\" \"npm run dev -w client\"",
    "dev:server": "npm run start:dev -w server",
    "dev:client": "npm run dev -w client",
    "kill:server": "lsof -ti:3000 | xargs kill -9 || true",
    "build": "npm run build -w server && npm run build -w client",
    "build:server": "npm run build -w server",
    "build:client": "npm run build -w client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
